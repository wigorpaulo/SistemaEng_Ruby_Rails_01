<p id="notice"><%= notice %></p>

<h1>Enderecos</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Complemento</th>
      <th>Numero</th>
      <th>Id bairro</th>
      <th>Id cep</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enderecos.each do |endereco| %>
      <tr>
        <td><%= endereco.descricao %></td>
        <td><%= endereco.complemento %></td>
        <td><%= endereco.numero %></td>
        <td>
          <% obj = Bairro.new %>
          <%= obj.consulta_nome(endereco.id_bairro) %>
          <% obj.freeze %>
        </td>
        <td>
          <% obj = Cep.new %>
          <%= obj.consulta_nome(endereco.id_cep) %>
          <% obj.freeze %>
        </td>
        <td><%= link_to 'Show', endereco %></td>
        <td><%= link_to 'Edit', edit_endereco_path(endereco) %></td>
        <td><%= link_to 'Destroy', endereco, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

