<h1>Pessoa Enderecos</h1>

<table>
  <thead>
    <tr>
      <th>Id pessoa</th>
      <th>Id endereco</th>
      <th>Id tipo endereco</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pessoa_enderecos.each do |pessoa_endereco| %>
      <tr>
        <td><%= pessoa_endereco.id_pessoa %></td>
        <td><%= pessoa_endereco.id_endereco %></td>
        <td><%= pessoa_endereco.id_tipo_endereco %></td>
        <td><%= link_to 'Show', pessoa_endereco %></td>
        <td><%= link_to 'Edit', edit_pessoa_endereco_path(pessoa_endereco) %></td>
        <td><%= link_to 'Destroy', pessoa_endereco, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

