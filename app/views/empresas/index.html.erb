<p id="notice"><%= notice %></p>

<h1>Empresas</h1>

<table>
  <thead>
    <tr>
      <th>Razao social</th>
      <th>Fantasia</th>
      <th>Id endereco</th>
      <th>Logo tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.razao_social %></td>
        <td><%= empresa.fantasia %></td>
        <td>
          <% obj = Endereco.new %>
          <%= obj.consulta_nome(empresa.id_endereco) %>
          <% obj.freeze %>
        </td>
        <td><%= empresa.logo_tipo %></td>
        <td><%= link_to 'Show', empresa %></td>
        <td><%= link_to 'Edit', edit_empresa_path(empresa) %></td>
        <td><%= link_to 'Destroy', empresa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

